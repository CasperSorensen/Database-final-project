@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


@{

    var sd = bool.Parse(TempData["IsLoggedIn"].ToString());

    if (bool.Parse(TempData["IsLoggedIn"].ToString()))
    {
        <p> you are logged in</p>
    }
    else
    {
        <h2>please log in</h2>


        <div class="container">
            <form name="Name" method="POST" action="/Home/test">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Hans Hansen" name="Name">
                    </div>
                </div>

               

                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Log In</button>
                    </div>
                </div>


            </form>
        </div>

    }
}

